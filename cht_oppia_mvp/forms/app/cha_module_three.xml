<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Community Health Academy</h:title>
    <model>
      <instance>
        <cha_module_three delimiter="#" id="cha_module_three" prefix="J1!cha_module_three!" version="2020-09-17 18:17:06">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source/>
            <source_id/>
            <user/>
            <contact>
              <_id/>
              <phone/>
            </contact>
          </inputs>
          <patient_id/>
          <patient_phone/>
          <training_intro>
            <step_one/>
            <introduction/>
            <open_oppia_button/>
            <step_two/>
          </training_intro>
          <learning_quiz>
            <who_attacked_q/>
            <who_attacked_score/>
            <no_covid_vaccine_q/>
            <no_covid_vaccine_score/>
            <like_malaria_q/>
            <like_malaria_score/>
            <strong_disinfectant_q/>
            <strong_disinfectant_score/>
            <fight_misinformation_q/>
            <fight_misinformation_score/>
          </learning_quiz>
          <assessment_score/>
          <assessment_passed/>
          <summary>
            <submit/>
            <result/>
            <thank_you_note/>
            <generated_note_name_38/>
            <success_note/>
            <confidence_level/>
            <gauge_mastery/>
            <transmission_confidence/>
            <preventive_measures_confidence/>
            <feedback/>
            <comments/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </cha_module_three>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/cha_module_three/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/cha_module_three/inputs/source" type="string"/>
      <bind nodeset="/cha_module_three/inputs/source_id" type="string"/>
      <bind nodeset="/cha_module_three/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/cha_module_three/inputs/contact/phone" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/cha_module_three/patient_id" type="string"/>
      <bind calculate="../inputs/contact/phone" nodeset="/cha_module_three/patient_phone" type="string"/>
      <bind nodeset="/cha_module_three/training_intro/step_one" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/training_intro/introduction" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/training_intro/open_oppia_button" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/training_intro/step_two" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/learning_quiz/who_attacked_q" required="true()" type="select1"/>
      <bind calculate="if(selected( /cha_module_three/learning_quiz/who_attacked_q ,'true'), 1, 0)" nodeset="/cha_module_three/learning_quiz/who_attacked_score" type="string"/>
      <bind nodeset="/cha_module_three/learning_quiz/no_covid_vaccine_q" required="true()" type="select1"/>
      <bind calculate="if(selected( /cha_module_three/learning_quiz/no_covid_vaccine_q ,'true'), 1, 0)" nodeset="/cha_module_three/learning_quiz/no_covid_vaccine_score" type="string"/>
      <bind nodeset="/cha_module_three/learning_quiz/like_malaria_q" required="true()" type="select"/>
      <bind calculate="if(selected( /cha_module_three/learning_quiz/like_malaria_q ,'true'), 1, 0)" nodeset="/cha_module_three/learning_quiz/like_malaria_score" type="string"/>
      <bind nodeset="/cha_module_three/learning_quiz/strong_disinfectant_q" required="true()" type="select1"/>
      <bind calculate="if(selected( /cha_module_three/learning_quiz/strong_disinfectant_q ,'true'), 1, 0)" nodeset="/cha_module_three/learning_quiz/strong_disinfectant_score" type="string"/>
      <bind nodeset="/cha_module_three/learning_quiz/fight_misinformation_q" required="true()" type="select"/>
      <bind calculate="if(selected( /cha_module_three/learning_quiz/fight_misinformation_q ,'spread_facts') and selected( /cha_module_three/learning_quiz/fight_misinformation_q ,'engage_community_leaders') and not(selected( /cha_module_three/learning_quiz/fight_misinformation_q ,'educate_arrogantly') or selected( /cha_module_three/learning_quiz/fight_misinformation_q ,'discriminate')), 1, 0)" nodeset="/cha_module_three/learning_quiz/fight_misinformation_score" type="string"/>
      <bind calculate="int( /cha_module_three/learning_quiz/who_attacked_score ) + int( /cha_module_three/learning_quiz/no_covid_vaccine_score ) + int( /cha_module_three/learning_quiz/like_malaria_score ) + int( /cha_module_three/learning_quiz/strong_disinfectant_score ) + int( /cha_module_three/learning_quiz/fight_misinformation_score )" nodeset="/cha_module_three/assessment_score" type="string"/>
      <bind calculate="if( /cha_module_three/assessment_score  = 5, 'yes', 'no')" nodeset="/cha_module_three/assessment_passed" type="string"/>
      <bind nodeset="/cha_module_three/summary/submit" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/result" readonly="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/thank_you_note" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'no'" required="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/generated_note_name_38" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'no'" type="string"/>
      <bind nodeset="/cha_module_three/summary/success_note" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/confidence_level" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/gauge_mastery" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/transmission_confidence" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/cha_module_three/summary/preventive_measures_confidence" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/cha_module_three/summary/feedback" readonly="true()" relevant=" /cha_module_three/assessment_passed  = 'yes'" required="true()" type="string"/>
      <bind nodeset="/cha_module_three/summary/comments" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/cha_module_three/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/cha_module_three/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/cha_module_three/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/cha_module_three/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/cha_module_three/inputs/user">
        <label>User</label>
      </group>
      <group ref="/cha_module_three/inputs/contact">
        <label>Contact</label>
        <input appearance="hidden" ref="/cha_module_three/inputs/contact/_id">
          <label>_id</label>
        </input>
        <input appearance="hidden" ref="/cha_module_three/inputs/contact/phone">
          <label>Phone</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/cha_module_three/training_intro">
      <label>Introduction to COVID-19 course</label>
      <input ref="/cha_module_three/training_intro/step_one">
        <label>**Step 1:**

Open Oppia Mobile to read the course content. Once complete, please return to this task for Step 2.</label>
      </input>
      <input ref="/cha_module_three/training_intro/introduction">
        <label>This third module, **COVID-19 Misinformation**, explains the role of a Community Health Worker in managing misinformation and addressing rumours on COVID-19.</label>
      </input>
      <input ref="/cha_module_three/training_intro/open_oppia_button">
        <label>[&lt;span style='background-color: #648af7; color:white; padding: 1em; text-decoration: none;border-radius: 8px; '&gt;Open Oppia Mobile&lt;/span&gt;](https://staging.cha.oppia-mobile.org/view?course=cht-demo)</label>
      </input>
      <input ref="/cha_module_three/training_intro/step_two">
        <label>**Step 2:**

Complete a short assessment on the course material.</label>
      </input>
    </group>
    <group appearance="field-list" ref="/cha_module_three/learning_quiz">
      <label>Assessment
We would like to ask you a few questions to understand your knowledge on COVID-19 in regards to this module:</label>
      <select1 ref="/cha_module_three/learning_quiz/who_attacked_q">
        <label>1. Coronavirus does not attack people at a young age.</label>
        <item>
          <label>True</label>
          <value>true</value>
        </item>
        <item>
          <label>False</label>
          <value>false</value>
        </item>
      </select1>
      <select1 ref="/cha_module_three/learning_quiz/no_covid_vaccine_q">
        <label>2. There is not a vaccine for COVID</label>
        <item>
          <label>True</label>
          <value>true</value>
        </item>
        <item>
          <label>False</label>
          <value>false</value>
        </item>
      </select1>
      <select ref="/cha_module_three/learning_quiz/like_malaria_q">
        <label>3. COVID is like Malaria</label>
        <hint>Select all that apply</hint>
        <item>
          <label>True</label>
          <value>true</value>
        </item>
        <item>
          <label>False</label>
          <value>false</value>
        </item>
      </select>
      <select1 ref="/cha_module_three/learning_quiz/strong_disinfectant_q">
        <label>4. Using a strong disinfectant(like bleach) to clean hands and body protects you from COVID-19</label>
        <item>
          <label>True</label>
          <value>true</value>
        </item>
        <item>
          <label>False</label>
          <value>false</value>
        </item>
      </select1>
      <select ref="/cha_module_three/learning_quiz/fight_misinformation_q">
        <label>5. How can health workers fight misinformation related to COVID-19?</label>
        <item>
          <label>Spread the facts</label>
          <value>spread_facts</value>
        </item>
        <item>
          <label>Engage community leaders who are trusted by their communities</label>
          <value>engage_community_leaders</value>
        </item>
        <item>
          <label>Tell people what to do without listening to their concerns or what they already know</label>
          <value>educate_arrogantly</value>
        </item>
        <item>
          <label>Discuss the race and location of people in the community who have the disease</label>
          <value>discriminate</value>
        </item>
      </select>
    </group>
    <group appearance="field-list summary" ref="/cha_module_three/summary">
      <label></label>
      <input ref="/cha_module_three/summary/submit">
        <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      </input>
      <input appearance="h1 green" ref="/cha_module_three/summary/result">
        <label>Thank you</label>
      </input>
      <input ref="/cha_module_three/summary/thank_you_note">
        <label>Good start, but you only answered **scored <output value=" /cha_module_three/assessment_score "/>** out of the 8 questions correctly.
This task will not be completed until you answer all the questions correctly</label>
        <hint>Optional</hint>
      </input>
      <input ref="/cha_module_three/summary/generated_note_name_38">
        <label>Do you need additional support on this topic?</label>
      </input>
      <input ref="/cha_module_three/summary/success_note">
        <label>Great job! You have completed Module 3: Misinformation. You can revisit this content at any time in your Oppia app.</label>
      </input>
      <input ref="/cha_module_three/summary/confidence_level">
        <label>**The following questions are designed to understand your confidence to perform the tasks taught in this lesson.**</label>
      </input>
      <input ref="/cha_module_three/summary/gauge_mastery">
        <label>**Following this training, what is your level of confidence that you can effectively perform the following tasks related to COVID-19?**</label>
      </input>
      <select1 ref="/cha_module_three/summary/transmission_confidence">
        <label>1. Address rumours on COVID-19</label>
        <item>
          <label>Extremely confident</label>
          <value>extreme</value>
        </item>
        <item>
          <label>Very confident</label>
          <value>very</value>
        </item>
        <item>
          <label>Somewhat confident</label>
          <value>somewhat</value>
        </item>
        <item>
          <label>A little confident</label>
          <value>a_little</value>
        </item>
        <item>
          <label>Not confident at all</label>
          <value>no_confidence</value>
        </item>
      </select1>
      <select1 ref="/cha_module_three/summary/preventive_measures_confidence">
        <label>2. Recognize and address misinformation on COVID-19</label>
        <item>
          <label>Extremely confident</label>
          <value>extreme</value>
        </item>
        <item>
          <label>Very confident</label>
          <value>very</value>
        </item>
        <item>
          <label>Somewhat confident</label>
          <value>somewhat</value>
        </item>
        <item>
          <label>A little confident</label>
          <value>a_little</value>
        </item>
        <item>
          <label>Not confident at all</label>
          <value>no_confidence</value>
        </item>
      </select1>
      <input ref="/cha_module_three/summary/feedback">
        <label>Do you have any other questions or feedback on this topic?</label>
        <hint>Optional</hint>
      </input>
      <input ref="/cha_module_three/summary/comments">
        <label>Write them down here and your supervisor will follow up</label>
      </input>
    </group>
  </h:body>
</h:html>
