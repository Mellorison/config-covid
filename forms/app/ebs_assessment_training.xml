<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Training</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/ebs_assessment_training/sneezing_coughing/sneeze_image:label">
            <value form="image">jr://images/blownose_sneeze_combine.png</value>
          </text>
          <text id="/ebs_assessment_training/household/clean_surfaces_image:label">
            <value form="image">jr://images/sanitize_phone.png</value>
          </text>
          <text id="/ebs_assessment_training/sanitize_hands/sanitize_image:label">
            <value form="image">jr://images/handsanitizer.png</value>
          </text>
          <text id="/ebs_assessment_training/soap_handwashing/handwash_image:label">
            <value form="image">jr://images/handwashing_options.png</value>
          </text>
          <text id="/ebs_assessment_training/social_distancing/social_distance_image:label">
            <value form="image">jr://images/social_distancing.png</value>
          </text>
          <text id="/ebs_assessment_training/isolate/isolate_image:label">
            <value form="image">jr://images/stay_home_if_unwell.png</value>
          </text>
        </translation>
      </itext>
      <instance>
        <ebs_assessment_training delimiter="#" id="ebs_assessment_training" prefix="J1!ebs_assessment_training!" version="2020-07-20 20:13:35">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source/>
            <source_id/>
            <user/>
            <contact>
              <_id/>
              <phone/>
            </contact>
          </inputs>
          <patient_id/>
          <patient_phone/>
          <ebs_intro>
            <thanking_note/>
            <send_message/>
            <covid_introduction/>
            <learning_objectives/>
            <hand_hygiene/>
            <infected_secretions/>
            <household_hygiene/>
            <distancing/>
            <reporting_cases/>
          </ebs_intro>
          <isolate>
            <isolate_if_exposed/>
            <isolate_image/>
          </isolate>
          <social_distancing>
            <social_distance/>
            <social_distance_image/>
          </social_distancing>
          <soap_handwashing>
            <handwash_soap_overview/>
            <handwash_method/>
            <handwash_image/>
          </soap_handwashing>
          <sanitize_hands>
            <sanitize/>
            <sanitize_image/>
          </sanitize_hands>
          <sneezing_coughing>
            <sneezing_coughing_overview/>
            <sneeze_image/>
          </sneezing_coughing>
          <household>
            <clean_surfaces/>
            <clean_surfaces_image/>
          </household>
          <learning_quiz>
            <hand_washing_q/>
            <hand_washing_score/>
            <hand_wash_duration_q/>
            <hand_wash_duration_score/>
            <sneezing_coughing_q/>
            <sneezing_coughing_score/>
            <household_q/>
            <household_score/>
            <social_distancing_q/>
            <social_distancing_score/>
          </learning_quiz>
          <assessment_score/>
          <assessment_passed/>
          <summary>
            <submit/>
            <result/>
            <success_1/>
            <success_confidence/>
            <effective_performance/>
            <feedback/>
            <fail_1/>
            <fail_2/>
            <Fail_3/>
            <fail_assistance/>
          </summary>
          <meta>
            <instanceID/>
          </meta>
        </ebs_assessment_training>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/ebs_assessment_training/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/ebs_assessment_training/inputs/source" type="string"/>
      <bind nodeset="/ebs_assessment_training/inputs/source_id" type="string"/>
      <bind nodeset="/ebs_assessment_training/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/ebs_assessment_training/inputs/contact/phone" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/ebs_assessment_training/patient_id" type="string"/>
      <bind calculate="../inputs/contact/phone" nodeset="/ebs_assessment_training/patient_phone" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/thanking_note" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/send_message" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/covid_introduction" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/learning_objectives" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/hand_hygiene" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/infected_secretions" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/household_hygiene" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/distancing" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/ebs_intro/reporting_cases" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/isolate/isolate_if_exposed" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/isolate/isolate_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/social_distancing/social_distance" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/social_distancing/social_distance_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/soap_handwashing/handwash_soap_overview" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/soap_handwashing/handwash_method" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/soap_handwashing/handwash_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/sanitize_hands/sanitize" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/sanitize_hands/sanitize_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/sneezing_coughing/sneezing_coughing_overview" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/sneezing_coughing/sneeze_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/household/clean_surfaces" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/household/clean_surfaces_image" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/learning_quiz/hand_washing_q" required="true()" type="select1"/>
      <bind calculate="if( /ebs_assessment_training/learning_quiz/hand_washing_q  = 'both_soap_and_water_or_hand_saniter', 1, 0)" nodeset="/ebs_assessment_training/learning_quiz/hand_washing_score" type="string"/>
      <bind nodeset="/ebs_assessment_training/learning_quiz/hand_wash_duration_q" required="true()" type="select1"/>
      <bind calculate="if( /ebs_assessment_training/learning_quiz/hand_wash_duration_q  = 'at_least_20_seconds', 1, 0)" nodeset="/ebs_assessment_training/learning_quiz/hand_wash_duration_score" type="string"/>
      <bind nodeset="/ebs_assessment_training/learning_quiz/sneezing_coughing_q" required="true()" type="select1"/>
      <bind calculate="if( /ebs_assessment_training/learning_quiz/sneezing_coughing_q  = 'cough_into_your_elbow_or_tissue' , 1, 0)" nodeset="/ebs_assessment_training/learning_quiz/sneezing_coughing_score" type="string"/>
      <bind nodeset="/ebs_assessment_training/learning_quiz/household_q" required="true()" type="select1"/>
      <bind calculate="if(  /ebs_assessment_training/learning_quiz/household_q  = 'a_disinfectant', 1, 0)" nodeset="/ebs_assessment_training/learning_quiz/household_score" type="string"/>
      <bind nodeset="/ebs_assessment_training/learning_quiz/social_distancing_q" required="true()" type="select1"/>
      <bind calculate="if( /ebs_assessment_training/learning_quiz/social_distancing_q  = 'at_least_2_meters', 1, 0)" nodeset="/ebs_assessment_training/learning_quiz/social_distancing_score" type="string"/>
      <bind calculate="int( /ebs_assessment_training/learning_quiz/hand_washing_score ) + int( /ebs_assessment_training/learning_quiz/hand_wash_duration_score ) + int( /ebs_assessment_training/learning_quiz/sneezing_coughing_score ) + int( /ebs_assessment_training/learning_quiz/household_score ) + int( /ebs_assessment_training/learning_quiz/social_distancing_score )" nodeset="/ebs_assessment_training/assessment_score" type="string"/>
      <bind calculate="if( /ebs_assessment_training/assessment_score  = 5, 'yes', 'no')" nodeset="/ebs_assessment_training/assessment_passed" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/submit" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/result" readonly="true()" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/success_1" readonly="true()" relevant=" /ebs_assessment_training/assessment_passed  = 'yes'" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/success_confidence" relevant=" /ebs_assessment_training/assessment_passed  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/ebs_assessment_training/summary/effective_performance" relevant=" /ebs_assessment_training/assessment_passed  = 'yes'" required="true()" type="select1"/>
      <bind nodeset="/ebs_assessment_training/summary/feedback" relevant=" /ebs_assessment_training/assessment_passed  = 'yes'" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/fail_1" readonly="true()" relevant=" /ebs_assessment_training/assessment_passed  = 'no'" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/fail_2" readonly="true()" relevant=" /ebs_assessment_training/assessment_passed  = 'no'" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/Fail_3" readonly="true()" relevant=" /ebs_assessment_training/assessment_passed  = 'no'" type="string"/>
      <bind nodeset="/ebs_assessment_training/summary/fail_assistance" relevant=" /ebs_assessment_training/assessment_passed  = 'no'" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/ebs_assessment_training/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/ebs_assessment_training/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/ebs_assessment_training/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/ebs_assessment_training/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/ebs_assessment_training/inputs/user">
        <label>User</label>
      </group>
      <group ref="/ebs_assessment_training/inputs/contact">
        <label>Contact</label>
        <input appearance="hidden" ref="/ebs_assessment_training/inputs/contact/_id">
          <label>_id</label>
        </input>
        <input appearance="hidden" ref="/ebs_assessment_training/inputs/contact/phone">
          <label>Phone</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/ebs_intro">
      <label>Covid-19 Education</label>
      <input ref="/ebs_assessment_training/ebs_intro/thanking_note">
        <label>**Thank you for serving your community with event-based surveillance**</label>
      </input>
      <input intent="ex:android.intent.action.SENDTO(uri_data='smsto:12345678', sms_body= /ebs_assessment_training/ebs_intro/thanking_note )" ref="/ebs_assessment_training/ebs_intro/send_message">
        <label>Click to send sms note</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/covid_introduction">
        <label>To avoid infection of yourself and others with COVID-19, it is important to practice the following hygiene measures:</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/learning_objectives">
        <label>**Learning Objectives**</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/hand_hygiene">
        <label>1. Know effective hand hygiene practices</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/infected_secretions">
        <label>2. Know the correct way to handle infected secretions from the nose, eyes and mouth</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/household_hygiene">
        <label>3. Know good household hygiene practices</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/distancing">
        <label>4. Know when to self-distance and self-quarantine</label>
      </input>
      <input ref="/ebs_assessment_training/ebs_intro/reporting_cases">
        <label>5. Know when to report a patient with suspected infection to the local health authorities</label>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/isolate">
      <label>Self-Quarantine</label>
      <input ref="/ebs_assessment_training/isolate/isolate_if_exposed">
        <label>If you returned from an area where COVID-19 is spreading, stay at home for 14 days and avoid contact with others</label>
      </input>
      <input ref="/ebs_assessment_training/isolate/isolate_image">
        <label ref="jr:itext('/ebs_assessment_training/isolate/isolate_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/social_distancing">
      <label>Physical Distancing</label>
      <input ref="/ebs_assessment_training/social_distancing/social_distance">
        <label>Stay 2 meters away from others, to not come in contact with infected droplets. Do not shake hands or hug. If you are greeting others, wave instead.</label>
      </input>
      <input ref="/ebs_assessment_training/social_distancing/social_distance_image">
        <label ref="jr:itext('/ebs_assessment_training/social_distancing/social_distance_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/soap_handwashing">
      <label>Hand Washing with Soap</label>
      <input ref="/ebs_assessment_training/soap_handwashing/handwash_soap_overview">
        <label>Washing hands regularly is very important to protect yourself and others.</label>
      </input>
      <input ref="/ebs_assessment_training/soap_handwashing/handwash_method">
        <label>Wash hands with soap under clean running water for 20 seconds, rubbing your hands together for 20 seconds.</label>
      </input>
      <input ref="/ebs_assessment_training/soap_handwashing/handwash_image">
        <label ref="jr:itext('/ebs_assessment_training/soap_handwashing/handwash_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/sanitize_hands">
      <label>Hand Washing with Sanitizer</label>
      <input ref="/ebs_assessment_training/sanitize_hands/sanitize">
        <label>If you do not have soap and water, use a hand sanitizer with at least 60% alcohol, rubbing your hands together for 20 seconds.</label>
      </input>
      <input ref="/ebs_assessment_training/sanitize_hands/sanitize_image">
        <label ref="jr:itext('/ebs_assessment_training/sanitize_hands/sanitize_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/sneezing_coughing">
      <label>Sneezing / Coughing</label>
      <input ref="/ebs_assessment_training/sneezing_coughing/sneezing_coughing_overview">
        <label>Do not cough near others. Always cough or sneeze into a tissue or your bent elbow. If you cough in your hands, wash your hands after with soap and water.</label>
      </input>
      <input ref="/ebs_assessment_training/sneezing_coughing/sneeze_image">
        <label ref="jr:itext('/ebs_assessment_training/sneezing_coughing/sneeze_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/household">
      <label>Household</label>
      <input ref="/ebs_assessment_training/household/clean_surfaces">
        <label>Regularly clean surfaces you touched with household disinfectants</label>
      </input>
      <input ref="/ebs_assessment_training/household/clean_surfaces_image">
        <label ref="jr:itext('/ebs_assessment_training/household/clean_surfaces_image:label')"/>
      </input>
    </group>
    <group appearance="field-list" ref="/ebs_assessment_training/learning_quiz">
      <label>Covid Assessment</label>
      <select1 ref="/ebs_assessment_training/learning_quiz/hand_washing_q">
        <label>Which of the following practices can help prevent the spread of COVID-19?</label>
        <item>
          <label>Soap and water</label>
          <value>soap_and_water</value>
        </item>
        <item>
          <label>Hand sanitizer</label>
          <value>hand_sanitizer</value>
        </item>
        <item>
          <label>Both soap and water OR hand sanitizer</label>
          <value>both_soap_and_water_or_hand_saniter</value>
        </item>
      </select1>
      <select1 ref="/ebs_assessment_training/learning_quiz/hand_wash_duration_q">
        <label>How long should you wash your hands to prevent the spread of COVID-19?</label>
        <item>
          <label>At least 10 seconds</label>
          <value>at_least_10_seconds</value>
        </item>
        <item>
          <label>At least 20 seconds</label>
          <value>at_least_20_seconds</value>
        </item>
      </select1>
      <select1 ref="/ebs_assessment_training/learning_quiz/sneezing_coughing_q">
        <label>What is the best way to cover your cough?</label>
        <item>
          <label>Cough into your elbow or tissue</label>
          <value>cough_into_your_elbow_or_tissue</value>
        </item>
        <item>
          <label>Cough into your hand</label>
          <value>cough_into_your_hand</value>
        </item>
      </select1>
      <select1 ref="/ebs_assessment_training/learning_quiz/household_q">
        <label>What should you use to clean surfaces you have touched to help prevent the spread of COVID-19?</label>
        <item>
          <label>Water only</label>
          <value>water_only</value>
        </item>
        <item>
          <label>A disinfectant</label>
          <value>a_disinfectant</value>
        </item>
      </select1>
      <select1 ref="/ebs_assessment_training/learning_quiz/social_distancing_q">
        <label>What is the minimum physical distance needed to prevent the spread of COVID-19?</label>
        <item>
          <label>At least 1 meter</label>
          <value>at_least_1_meter</value>
        </item>
        <item>
          <label>At least 2 meters</label>
          <value>at_least_2_meters</value>
        </item>
      </select1>
    </group>
    <group appearance="field-list summary" ref="/ebs_assessment_training/summary">
      <label></label>
      <input ref="/ebs_assessment_training/summary/submit">
        <label>&lt;h4 style="text-align:center;"&gt;Be sure you Submit to complete this action.&lt;/h4&gt;</label>
      </input>
      <input appearance="h1 green" ref="/ebs_assessment_training/summary/result">
        <label>Thank you</label>
      </input>
      <input ref="/ebs_assessment_training/summary/success_1">
        <label>You have answered all the questions correctly! You may review this content on your profile page.</label>
      </input>
      <select1 ref="/ebs_assessment_training/summary/success_confidence">
        <label>How confident do you feel in your mastery of this content?</label>
        <item>
          <label>Extremely confident</label>
          <value>extreme</value>
        </item>
        <item>
          <label>Very confident</label>
          <value>very</value>
        </item>
        <item>
          <label>Somewhat confident</label>
          <value>somewhat</value>
        </item>
        <item>
          <label>A little confident</label>
          <value>a_little</value>
        </item>
        <item>
          <label>Not confident at all</label>
          <value>no_confidence</value>
        </item>
      </select1>
      <select1 ref="/ebs_assessment_training/summary/effective_performance">
        <label>Will you be able to effectively perform the task?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/ebs_assessment_training/summary/feedback">
        <label>Do you have any other questions or feedback on this topic? (Optional)</label>
        <hint>Your supervisor will follow up</hint>
      </input>
      <input ref="/ebs_assessment_training/summary/fail_1">
        <label>Good start but you only answered <output value=" /ebs_assessment_training/assessment_score "/> out of the 5 questions correctly.</label>
      </input>
      <input ref="/ebs_assessment_training/summary/fail_2">
        <label>We'll generate another task for you to go through the workflow again.</label>
      </input>
      <input ref="/ebs_assessment_training/summary/Fail_3">
        <label>Thank you for your persistence, educating ourselves and our communities is the best way to stop covid.</label>
      </input>
      <select1 ref="/ebs_assessment_training/summary/fail_assistance">
        <label>Do you need assistance with this topic?</label>
        <hint>Optional</hint>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
