<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>COVID-19 Education: Behaviour Change</h:title>
    <model>
      <instance>
        <covid_rumors delimiter="#" id="covid_rumors" prefix="J1!covid_rumors!" version="2020-07-16 18:01:06">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source/>
            <source_id/>
            <user/>
            <contact>
              <_id/>
              <phone/>
            </contact>
          </inputs>
          <patient_id/>
          <patient_phone/>
          <rumours_intro>
            <intro_note/>
            <redirect/>
          </rumours_intro>
          <meta>
            <instanceID/>
          </meta>
        </covid_rumors>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/covid_rumors/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/covid_rumors/inputs/source" type="string"/>
      <bind nodeset="/covid_rumors/inputs/source_id" type="string"/>
      <bind nodeset="/covid_rumors/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/covid_rumors/inputs/contact/phone" type="db:person"/>
      <bind calculate="../inputs/contact/_id" nodeset="/covid_rumors/patient_id" type="string"/>
      <bind calculate="../inputs/contact/phone" nodeset="/covid_rumors/patient_phone" type="string"/>
      <bind nodeset="/covid_rumors/rumours_intro/intro_note" readonly="true()" type="string"/>
      <bind nodeset="/covid_rumors/rumours_intro/redirect" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/covid_rumors/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/covid_rumors/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/covid_rumors/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/covid_rumors/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/covid_rumors/inputs/user">
        <label>User</label>
      </group>
      <group ref="/covid_rumors/inputs/contact">
        <label>Contact</label>
        <input appearance="hidden" ref="/covid_rumors/inputs/contact/_id">
          <label>_id</label>
        </input>
        <input appearance="hidden" ref="/covid_rumors/inputs/contact/phone">
          <label>phone</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/covid_rumors/rumours_intro">
      <label>COVID-19 and Rumours</label>
      <input ref="/covid_rumors/rumours_intro/intro_note">
        <label>Detecting and responding to rumours is an important measure to prevent the spread of COVID-19</label>
      </input>
      <input ref="/covid_rumors/rumours_intro/redirect">
        <label>[&lt;span style='background-color: #20B2AA; color:white; padding: 1em; text-decoration: none; '&gt;Open Learning Center&lt;/span&gt;](https://demo.oppia-mobile.org/view?digest=bb03a6109b7e02343b7de4bc3b2d1b3842421)</label>
      </input>
    </group>
  </h:body>
</h:html>
